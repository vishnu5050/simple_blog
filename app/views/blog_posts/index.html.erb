<% @blog_posts.each do |blog_post| %>
  
  
  <div class="page-header">
     <h1><%= link_to blog_post.title , blog_post %>    <small>posted <%= time_ago_in_words(blog_post.created_at) %> ago  by    <u><%= blog_post.user.email %></u></small></h1>
     <p><%=  simple_format(h truncate blog_post.post , length:20)  %></p>
    
  <%= link_to 'Show', blog_post , class:"btn btn-default navbar-btn"  %>
   
  <%= link_to 'Edit', edit_blog_post_path(blog_post), class:"btn btn-default navbar-btn" if user_signed_in?  %>
  <%= link_to 'Delete', blog_post, method: :delete, class:"btn btn-default navbar-btn", data: { confirm: 'Are you sure?' } if user_signed_in?  %>
  
   </div>
    
  <% end %>
  




